    <!-- Leaflet JS (Map Implementation)-->
    <script>

        document.addEventListener('DOMContentLoaded', function () {
            // VTC Ground coordinates (Ulhasnagar)
            const position = [19.2183, 73.1649];

            // Initialize map
            const map = L.map('map', {
                center: position,
                zoom: 15,
                zoomControl: false
            });

            // Add tile layer (OpenStreetMap)
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: false
            }).addTo(map);

            // Create custom marker
            const customIcon = L.divIcon({
                className: 'custom-marker',
                iconSize: [20, 20],
                iconAnchor: [10, 10]
            });

            // Add marker
            const marker = L.marker(position, { icon: customIcon }).addTo(map);

            // Add popup to marker
            marker.bindPopup('VTC Ground Rd, Geeta Colony').openPopup();

            // Create custom zoom controls
            const zoomControls = document.createElement('div');
            zoomControls.className = 'custom-zoom-controls';

            const zoomInButton = document.createElement('button');
            zoomInButton.className = 'zoom-button';
            zoomInButton.innerHTML = '+';
            zoomInButton.onclick = () => map.zoomIn();

            const zoomOutButton = document.createElement('button');
            zoomOutButton.className = 'zoom-button';
            zoomOutButton.innerHTML = 'âˆ’';
            zoomOutButton.onclick = () => map.zoomOut();

            zoomControls.appendChild(zoomInButton);
            zoomControls.appendChild(zoomOutButton);

            // Add zoom controls to map
            document.querySelector('#map').appendChild(zoomControls);

            // Add nearby landmarks
            const landmarks = [
                { name: 'St. Paul College', coords: [19.2173, 73.1629] },
                { name: 'Poonam Hotel', coords: [19.2163, 73.1669] },
                { name: 'Gagan Balani Rd', coords: [19.2193, 73.1669] }
            ];

            // Add markers for landmarks
            landmarks.forEach(landmark => {
                L.marker(landmark.coords, {
                    icon: L.divIcon({
                        className: 'landmark-marker',
                        html: `<div style="width: 8px; height: 8px; background: #4b5563; border-radius: 50%; border: 2px solid #fff;"></div>`,
                        iconSize: [8, 8],
                        iconAnchor: [4, 4]
                    })
                })
                    .bindPopup(landmark.name)
                    .addTo(map);
            });

            // Disable map zoom when scrolling over it
            map.scrollWheelZoom.disable();

            // Enable map zoom when clicking on map
            map.on('click', function () {
                if (!map.scrollWheelZoom.enabled()) {
                    map.scrollWheelZoom.enable();
                }
            });

            // Disable map zoom when mouse leaves map
            map.on('mouseout', function () {
                map.scrollWheelZoom.disable();
            });
        }); 
    </script>

